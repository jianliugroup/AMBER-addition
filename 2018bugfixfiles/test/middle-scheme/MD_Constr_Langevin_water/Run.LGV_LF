#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

if( ! $?AMBERHOME ) then
  echo "environment variable AMBERHOME is not set! exiting......"
  exit(0)
else
  echo "AMBERHOME is $AMBERHOME"
endif

set sander = "$AMBERHOME/bin/sander"

if( ! -f $sander ) then
  echo "No such file: $sander"
  exit(0)
else
  goto runtest
endif

runtest:
  echo "Testing MD with langevin dynamics"
  /bin/rm -f md_LGV.out
  $sander -O \
          -i md_LGV.in \
          -p qspcfw216.top \
          -c nvt.rst \
          -o md_LGV.out \
          -r nvt.rst.1 \
          -x lgv.crd \
          -inf lgv.info \
    || goto error
  $AMBERHOME/bin/dacdif md_LGV.out.save md_LGV.out
  /bin/rm -f lgv.crd lgv.info nvt.rst.1

exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
